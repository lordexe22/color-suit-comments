{
  "name": "color-suit-comments",
  "displayName": "Color Suit Comments",
  "description": "Allows you to add custom styles to comments in order to make the code easier to read.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:css",
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "colorSuitComments.options",
        "title": "Options"
      },
      {
        "command": "colorSuitComments.edit",
        "title": "Edit"
      },
      {
        "command": "colorSuitComments.toggleCollapse",
        "title": "Toggle Collapse"
      }
    ],
    "submenus": [
      {
        "id": "colorSuitComments.options",
        "label": "Color Suit Comments Options",
        "icon": "$(heart-filled)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "submenu": "colorSuitComments.options",
          "group": "navigation"
        }
      ],
      "colorSuitComments.options": [
        { 
          "command": "colorSuitComments.edit"
        },
        { 
          "command": "colorSuitComments.toggleCollapse"
        }
      ]
    },
    "configuration": {
      "title": "Color Suit Comments",
      "properties": {
        "colorSuitComments.tags": {
          "type": "array",
          "items": {
            "type":"object",
            "properties": {
              "tag": {
                "type": "string",
                "description": "Tag to search for in comments"
              },
              "color": {
                "type": "string",
                "description": "Text color to apply to the tag in comments"
              },
              "backgroundColor": {
                "type": "string",
                "description": "Background color to apply to the collapsible block containing the tag"
              },
              "fontFamily": {
                "type": "string",
                "description": "Font family to apply to the tag in comments"
              }
            },
            "required": ["tag"],
            "additionalProperties": false
          },
          "default": [
            {
              "tag": "error",
              "color": "#ff4d4f",
              "backgroundColor": "#3b2525"
            },
            {
              "tag": "warning",
              "color": "#ffff4f",
              "backgroundColor": "#3b3b25"
            },
            {
              "tag": "todo",
              "color": "#ffa04f",
              "backgroundColor": "#3b2f25"
            },
            {
              "tag": "info",
              "color": "#4080f0",
              "backgroundColor": "#232b39"
            }
          ],
          "description": "Array of tags with custom styling for Color Suit Comments"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
